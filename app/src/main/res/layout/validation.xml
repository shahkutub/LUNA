<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/luna_bg"

    >

    <include layout="@layout/tollbar_validation"
        android:id="@+id/topPanel"
        ></include>

    <RelativeLayout
        android:id="@+id/proView"
        android:layout_below="@+id/topPanel"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/imgReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENTER YOUR E-MAIL TO RECEIVE INSTRUCTION ON HOW TO GET PASSWORD "
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"
            />



        <EditText
            android:id="@+id/etValidationCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:hint="VERIFICATION CODE"
            android:maxLines="1"
            android:textColorHint="@color/white"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textSize="15sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/luna_register_line"
            android:layout_marginTop="10dp"

            />

        <TextView
            android:id="@+id/tvConFirmBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:background="@drawable/luna_reg_bar"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER NOW"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            />

    </LinearLayout>
</LinearLayout>