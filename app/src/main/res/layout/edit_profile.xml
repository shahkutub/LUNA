<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/luna_bg"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/luna_pic_holder"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile Picture"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        >

        <EditText
            android:id="@+id/etEditFirstName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:hint="First Name"
            android:maxLines="1"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext_bg"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/etEditLastName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:hint="Last Name"
            android:maxLines="1"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext_bg"
            android:inputType="textCapSentences"
            android:singleLine="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/etEditPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left|center_vertical"
            android:hint="Phone Number"
            android:maxLines="1"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext_bg"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginTop="10dp"
            >
            <EditText
                android:id="@+id/etWritHere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text=""
                android:maxLines="1"
                android:textColor="@color/white"
                android:background="@null"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/luna_back"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvConFirmBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/luna_reg_bar"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            />

    </LinearLayout>

</LinearLayout>